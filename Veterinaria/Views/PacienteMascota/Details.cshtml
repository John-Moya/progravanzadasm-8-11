@model Veterinaria.Models.PacienteMascota

@{
    ViewData["Title"] = "Detalles";
}

<style>
    #tabla {
        padding: 10px;
        background-color: white;
        border-radius: 10px;
    }

    body {
        background-color: #6CD3DB;
    }

    #header {
        background-color: #057C85;
        color: white;
        padding: 1rem;
        text-align: center;
        border-radius: 10px;
    }
</style>



<h1>Detalles</h1>

<div>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <!--@Html.DisplayNameFor(model => model.NombreMascota)-->
            <label>Nombre de la Mascota</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NombreMascota)
        </dd>

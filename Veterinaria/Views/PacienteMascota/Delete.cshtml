@model Veterinaria.Models.PacienteMascota

@{
    ViewData["Title"] = "Eliminar Registro";
}

<style>
    #tabla {
        padding: 10px;
        background-color: white;
        border-radius: 10px;
    }

    body {
        background-color: #6CD3DB;
    }

    #header {
        background-color: #057C85;
        color: white;
        padding: 1rem;
        text-align: center;
        border-radius: 10px;
    }
</style>


<h1>Eliminar registro</h1>

<h3>Esta usted seguro de eliminar este registro?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <!--@Html.DisplayNameFor(model => model.NombreMascota)-->
            <label>Nombre de la Mascota</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NombreMascota)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Raza)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Raza)
        </dd>
        <dt class="col-sm-2">
            <!--@Html.DisplayNameFor(model => model.FechaNacimientoMascota)-->
            <label>Fecha de Nacimiento de la Mascota</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaNacimientoMascota)
        </dd>
        <dt class="col-sm-2">
            <!--@Html.DisplayNameFor(model => model.NombreDueno)-->
            <label>Nombre del dueño</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NombreDueno)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Telefono)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Telefono)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Direccion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Direccion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Correo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Correo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cedula)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cedula)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="id" />
        <input type="submit" value="Eliminar" class="btn btn-danger">
        <a asp-action="Index">Volver a lista de registros</a>
    </form>
</div>

@model IEnumerable<Veterinaria.Models.PacienteMascota>

@{
    ViewData["Title"] = "Registro de Mascotas";
}

<style>
    #tabla {
        padding: 10px;
        background-color: white;
        border-radius: 10px;
    }

    body {
        background-color: #6CD3DB;
    }

    #header {
        background-color: #057C85;
        color: white;
        padding: 1rem;
        text-align: center;
        border-radius: 10px;
    }
   
</style>
<body>
    <h1>Registros de Mascotas</h1>

    <p>
        <a asp-action="Create">Crear nuevo registro</a>
    </p>
    <div id="tabla">
        <table class="table">
        <thead>
            <tr id="header">
                <th>
                    <!-- Html.DisplayNameFor(model => model.NombreMascota)-->
                    Nombre de Mascota
                </th>
                <th>
                    <!-- @Html.DisplayNameFor(model => model.Raza)-->
                    Raza
                </th>
                <th>
                    <!--    @Html.DisplayNameFor(model => model.FechaNacimientoMascota)-->
                    Fecha de Nacimiento de la Mascota
                </th>
                <th>
                    <!--     @Html.DisplayNameFor(model => model.NombreDueno)-->
                    Nombre del Dueño
                </th>
                <th>
                    <!--     @Html.DisplayNameFor(model => model.Telefono)-->
                    Telefono
                </th>
                <th>
                    <!--    @Html.DisplayNameFor(model => model.Direccion)-->
                    Direccion
                </th>
                <th>
                    <!-- @Html.DisplayNameFor(model => model.Correo)-->
                    Correo Electronico
                </th>
                <th>
                    <!--    @Html.DisplayNameFor(model => model.Cedula)-->
                    Cedula
                 <th>
                </th>
                </tr>
            </thead>
            <tbody>
        @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NombreMascota)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Raza)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaNacimientoMascota)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NombreDueno)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefono)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Direccion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Correo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cedula)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.id">Editar</a> |
                        <a asp-action="Details" asp-route-id="@item.id">Ver</a> |
                        <a asp-action="Delete" asp-route-id="@item.id">Eliminar</a>
                    </td>
                </tr>
        }
            </tbody>
        </table>
        </div>
    </body>

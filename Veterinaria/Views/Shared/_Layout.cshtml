<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Veterinaria Maskoteando</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<style>
    #logo {
        border-radius: 50%;
        width:100px;
    }
    #title {
        font-family: 'Brush Script MT', cursive;
        color: navajowhite;
        text-align: center;
        vertical-align: middle;
        display: flex;
        justify-content: center;
        -webkit-text-stroke: 0.6px black;
        font-size: 20px;
    }
    #titlediv {
        height: 50px;
        width: 100px;
        background-color:  #bbb;
        border-radius: 50%;
        display: inline-block;
        align-items: center;
        display: flex;
        justify-content: center;    
    }

    #nav {
        background-color: deepskyblue; 
    }
    

</style>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" id="nav">
            <div class="container">
                <div id="titlediv">
                    <a id="title" asp-area="" asp-controller="Home" asp-action="Index">Veterinaria Maskoteando</a>
                </div>
                        <div class="col-xs-6 col-md-3">
                            <img src="https://st2.depositphotos.com/4441075/7697/v/600/depositphotos_76975367-stock-illustration-sign-with-domestic-pets-silhouettes.jpg" id="logo" "Veterinaria Maskoteando">
                        </div>
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                                aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                            <ul class="navbar-nav flex-grow-1">
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Acerca" asp-action="Index">Acerca...</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Bienvenida" asp-action="Index">Bienvenida</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Contactenos" asp-action="Index">Contactenos</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Servicios" asp-action="Index">Servicios</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Privacy" asp-action="Privacy">Privacy</a>
                                </li>
                            </ul>
                        </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted " id="nav">
        <div class="container" id="nav">
            &copy; 2021 - Veterinaria - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

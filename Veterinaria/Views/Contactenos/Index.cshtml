@{
    ViewData["Title"] = "Contactenos";
}
<style>
    body {
        background-image: url(https://okdiario.com/img/2019/07/13/-cuales-son-las-diferentes-especialidades-veterinarias_.jpg);
        background-position: center;
        background-size: cover;
        background-repeat: no-repeat;
    }

    h3 {
        text-align: center;
        font-weight: bold;
    }

    .caption {
        text-align: center;
        justify-content: center;
        margin-left: auto;
        margin-right: auto;
        background-color:bisque;
    }

    form {
        width: 100%;
        max-width: 600px;
        margin: 0 auto;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }
    form input {
        width: 90%;
        height: 30px;
        margin: 0.5rem;
    }

    form button {
        padding: 0.5em 1em;
        border: none;
        background: rgb(100, 200, 255);
        cursor: pointer;
    }
    #text {
        font-weight: bold;
        color: black;
        align-items: center;
        display: flex;
        justify-content: center;
        vertical-align: middle;
        -webkit-text-stroke: 0.1px white;
    }
    #ayuda {
        margin-left: auto;
        margin-right: auto;
        display: block;
    }
</style>
